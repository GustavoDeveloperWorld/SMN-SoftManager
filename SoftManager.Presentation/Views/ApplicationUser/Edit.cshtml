@model SoftManager.Domain.Entities.ApplicationUser

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Editar Usuário</h1>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="FullName" class="block text-gray-700 font-medium mb-2">Nome Completo</label>
            <input asp-for="FullName" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-600" />
            <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Email</label>
            <input asp-for="Email" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-indigo-600" readonly />
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full px-6 py-3 bg-indigo-600 text-white font-medium rounded hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-600">Salvar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
