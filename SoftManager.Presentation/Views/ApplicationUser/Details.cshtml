@model SoftManager.Domain.Entities.ApplicationUser

<div class="container mx-auto max-w-4xl p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Detalhes do Usuário</h1>
    <div class="flex flex-col md:flex-row gap-6">

        <div class="flex-shrink-0 mr-6">
            @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
            {
                <img src="@Model.ProfilePicturePath"
                     alt="Foto de perfil"
                     class="object-cover rounded-full border border-gray-300 shadow-md"
                     style="width: 250px; height: 380px;" />
            }
            else
            {
                <div class="w-12 h-12 bg-gray-200 flex items-center justify-center rounded-full border border-gray-300 shadow-md">
                    <span class="text-gray-500 text-sm">Sem Foto</span>
                </div>
            }
        </div>

        <div class="flex-grow">
            <div class="mb-4">
                <h2 class="text-lg font-bold text-gray-700">Nome Completo:</h2>
                <p class="text-gray-800">@Model.FullName</p>
            </div>

            <div class="mb-4">
                <h2 class="text-lg font-bold text-gray-700">Email:</h2>
                <p class="text-gray-800">@Model.Email</p>
            </div>

            <div class="mb-4">
                <h2 class="text-lg font-bold text-gray-700">Data de Nascimento:</h2>
                <p class="text-gray-800">@Model.BirthDate?.ToString("dd/MM/yyyy")</p>
            </div>

            <div class="mb-4">
                <h2 class="text-lg font-bold text-gray-700">Celular:</h2>
                <p class="text-gray-800">@Model.Mobile</p>
            </div>

            <div class="mb-4">
                <h2 class="text-lg font-bold text-gray-700">Endereço:</h2>
                <p class="text-gray-800">@Model.Address</p>
            </div>
        </div>
    </div>
    <br/>
    <div class="flex justify-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300 mr-2">Editar</a>
        <a asp-action="Index" class="text-gray-700 hover:text-gray-900 px-4 py-2 rounded-md hover:bg-gray-200 transition duration-300">Cancelar</a>
    </div>
</div>

