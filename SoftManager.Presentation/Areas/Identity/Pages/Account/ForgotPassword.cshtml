@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>
    <hr />

    <form method="post" class="mt-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
        <div class="form-floating mb-3">
            <label asp-for="Input.Email" class="block text-gray-700 font-medium mb-2">Digite seu E-mail:</label>
            <input asp-for="Input.Email" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-600 focus:outline-none" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-full btn btn-lg btn-primary">Resetar Senha</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
