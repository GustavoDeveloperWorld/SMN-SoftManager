@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmação de redefinição de senha";
}

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>
    <p class="text-gray-700 text-center">
        Sua senha foi redefinida. Por favor, <a asp-page="./Login" class="text-indigo-600 hover:underline">clique aqui para entrar</a>.
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
