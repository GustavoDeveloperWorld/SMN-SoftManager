@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <p class="text-gray-700 mb-4">Deseja realmente sair da aplicação?</p>
                <button type="submit" class="btn-primary w-full">Clique aqui para sair</button>
            </form>
        }
        else
        {
            <p class="text-center text-gray-700">Você saiu com sucesso da aplicação.</p>
        }
    }
</div>
