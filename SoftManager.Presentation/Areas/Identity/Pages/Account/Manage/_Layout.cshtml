@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container mx-auto max-w-6xl bg-white shadow-md rounded-lg p-6 mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Gerenciar sua conta</h1>

    <div>
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Alterar configurações da conta</h2>
        <hr class="mb-6" />

        <div class="flex flex-col md:flex-row gap-6">

            <div class="w-full md:w-1/4 bg-gray-100 p-4 rounded-md shadow-sm">
                <partial name="_ManageNav" />
            </div>

            <div class="w-full md:w-3/4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
