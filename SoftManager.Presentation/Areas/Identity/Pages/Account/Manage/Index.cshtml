@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mx-auto max-w-lg bg-white shadow-md rounded-lg p-6 mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>
    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>

        <div class="mb-4">
            <label asp-for="Username" class="block text-gray-700 font-medium mb-2">Nome de Usuário</label>
            <input asp-for="Username" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-600 focus:outline-none bg-gray-100 cursor-not-allowed" placeholder="Nome de usuário" disabled />
        </div>

        <div class="mb-4">
            <label asp-for="Input.PhoneNumber" class="block text-gray-700 font-medium mb-2">Número de Telefone</label>
            <input asp-for="Input.PhoneNumber" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-600 focus:outline-none" placeholder="Digite seu número de telefone" />
            <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm"></span>
        </div>
        <br />
        <button id="update-profile-button" type="submit" class="btn-primary w-full">Salvar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
