@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registro confirmado";
}

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>
    @if (@Model.DisplayConfirmAccountLink)
    {
        <p class="text-center">
            Esta aplicação não possui um enviador de e-mails configurado, veja <a href="https://aka.ms/aspaccountconf" class="text-indigo-600 hover:underline">estes documentos</a> para configurar um enviador de e-mails real.
            Normalmente, isso seria enviado por e-mail: <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="text-indigo-600 hover:underline">Clique aqui para confirmar sua conta</a>.
        </p>
    }
    else
    {
        <p class="text-center">
            Por favor, verifique seu e-mail para confirmar sua conta.
        </p>
    }
</div>
