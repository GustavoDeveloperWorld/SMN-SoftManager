@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="container mx-auto max-w-lg p-6 bg-white shadow-md rounded-lg mt-10">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>
    <h2 id="external-login-title" class="text-center text-gray-800">Associe sua conta @Model.ProviderDisplayName.</h2>
    <hr />

    <p id="external-login-description" class="text-info text-center">
        Você autenticou com sucesso usando <strong>@Model.ProviderDisplayName</strong>.
        Por favor, insira um endereço de e-mail abaixo e clique no botão de Registrar para finalizar o login.
    </p>

    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Por favor, insira seu e-mail." />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-full btn btn-lg btn-primary">Registrar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
